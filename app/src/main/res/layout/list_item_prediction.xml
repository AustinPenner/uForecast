<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/list_item_predict_confidence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:textSize="30sp"
        android:padding="4dp"
        tools:text="50"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/list_item_predict_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_predict_confidence"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="18sp"
        android:paddingTop="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        tools:text="Prediction Title"
        android:textColor="@color/almostBlack"/>

    <TextView
        android:id="@+id/list_item_predict_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_predict_confidence"
        android:layout_below="@id/list_item_predict_title_text_view"
        android:padding="4dp"
        tools:text="Prediction Date"/>

</RelativeLayout>